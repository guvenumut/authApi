<%- include('partials/header'); -%>

<form id="passwordForm">
  <h2>Sifre Degistir</h2>
  <label for="password">Password</label>
  <input type="password" name="password" id="password" />
  <div class="password error"></div>
  <label for="newPassword">New Password</label>
  <input type="password" name="newPassword" id="newPassword" />
  <div class="newPassword error"></div>
  <button>Onayla</button>
</form>

<%- include('partials/footer'); -%>

<script>
  const form = document.querySelector('#passwordForm');
  const passwordError = document.querySelector('.password.error');
  const newPasswordError = document.querySelector('.newPassword.error');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // reset errors
    passwordError.textContent = '';
    newPasswordError.textContent = '';

    // get values
    const password = form.password.value;
    const newPassword = form.newPassword.value;

    try {
      const res = await fetch('/changepassword', { 
        method: 'POST', 
        body: JSON.stringify({ password, newPassword }),
        headers: {'Content-Type': 'application/json'}
      });
      const data = await res.json();
      if (data.errors) {
        if (data.errors.email) {
          passwordError.textContent = data.errors.email;
        }
        if (data.errors.password) {
          newPasswordError.textContent = data.errors.password;
        }
      }
      if (data.message) {
        alert(data.message);
        location.assign('/');
      }

    } catch (err) {
      console.log(err);
    }
  });
</script>